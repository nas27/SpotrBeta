@{
    ViewBag.Title = "Home";

    var userFollowed = ViewBag.UserFollowed;
    var allWorkouts = ViewBag.AllWorkouts;
    var allUsers = ViewBag.AllUsers;
    var allExercises = ViewBag.AllExercises;

}

<div class="jumbotron">
    <img align="middle" src="~/Images/splash_page.png" />
</div>

<div class="alert">@Html.Partial("_LoginPartial")</div>


<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Image Slide Wrapper -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/lift.jpg" alt="Lifting" width="380" height="300">
            </div>

            <div class="item">
                <img src="~/Images/spotter.jpeg" alt="WorkoutBuddy" width="380" height="300">
            </div>

            <div class="item">
                <img src="~/Images/treadmill.jpg" alt="Running" width="380" height="300">
            </div>

            <div class="item">
                <img src="~/Images/kettle.jpg" alt="KettleBell" width="380" height="300">
            </div>
        </div>

        <!-- User click Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>





    <h2>Workout Feed:</h2>
    <h4 class="caption">See what you and your friends are doing!</h4>
<div class="jumbotron">
    @foreach (var follower in userFollowed)
    {

        foreach (var userInfo in allUsers)
        {
            if (follower.UserId == userInfo.Id)
            {



                <section><span class="glyphicon glyphicon-user"></span> <strong>@userInfo.FirstName @userInfo.LastName</strong> has posted the workout:</section>

                foreach (var item in allWorkouts)
                {
        
                        if (item.User_Id == userInfo.Id)
                        {

                        <div class="h5"><p class="badge">@item.Name</p><sub>@item.DateCreated</sub></div>
                        foreach (var exItem in allExercises)
                        {
                            if (item.Id == exItem.Workout_Id)
                            {
                                <i>@Html.ActionLink("View Workout Details", "Details", "Exercis", new { id = exItem.Id }, null)</i>
                            }
                        }
                        
                        }
                    }

                

            }
        }
    }
</div>


    
