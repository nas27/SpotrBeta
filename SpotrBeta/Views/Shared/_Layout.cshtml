<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Capstone ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
     
            <div class="navbar-brand navbar-header">
                <a href="~/Home/Index"><img class="navbar-brand" src="@Url.Content("~/Images/mini_logo.png")" /></a>
            </div>
        <div>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                





</div>
            <div class="navbar-collapse navbar-brand collapse container">

                <ul class="nav navbar-nav nav-tabs">        
                    <li>@Html.ActionLink("Create A Workout!", "Create", "Workouts")</li>
                    <li>@Html.ActionLink("Follow a Trainer", "Follow", "Users")</li>
                    <li>@Html.ActionLink("My Exercises", "Index", "Exercis")</li>
                    @*<li>@Html.ActionLink("My Workouts", "Index", "Workouts")</li>*@

                    <li>@Html.ActionLink("About", "About", "Home")</li>             
                    <li>@Html.ActionLink("My Profile", "Index", "Users")</li>
             

                </ul>
               
               
            </div>
        
        </div>
    
    <div class="container body-content well">
        
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
  
    
</body>
    

</html>
